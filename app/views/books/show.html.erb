<div class="body">
	<div class="container">
		<% if flash[:notice] %>
		<p><%= flash[:notice] %></p>
		<% end %>
		
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/list', user: @user %>
			</div>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>
								<%= link_to @user.name, user_path(@user.id) %>
								<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg" %>
								<br>
							</td>
							<td>
								<span>
									<%= @mybook.title %>
								</span>
							</td>
							<td>
								<span>
									<%= @mybook.body %>
								</span>
							</td>
							<% if @mybook.user == current_user %>
							<td>
								<%= link_to "Edit", edit_book_path(@mybook) %>
							</td>
							<td>
								<%= link_to "Delete", book_path(@mybook), method: :delete, "data-confirm" => "本当に削除しますか？" %>
							</td>
								<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

<div class="body">
	<div class="container">
		<% if flash[:notice] %>
		<p style='color: green;'><%= flash[:notice] %></p>
		<% end %>
		<div class="row">

			<div class="col-xs-3">
				<%= render 'users/list', user: @user, book: @newbook %>
			</div>
			<div class="col-xs-9">
				<h2>Book detail</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th></th>
							<th></th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td>
								<%= link_to user_path(@user)  do %>
								<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg", size:'40x40' %>
								<br>
								<br>
								<%= @user.name %>
								<% end %>
							</td>
							<td>
								<span>
									<%= @book.title %>
								</span>
							</td>
							<td>
								<span>
									<%= @book.body %>
								</span>
							</td>
							<% if @book.user == current_user %>
							<td>
								<%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success" %>
							</td>
							<td>
								<%= link_to "Destroy", book_path(@book), class:"btn-sm btn-danger", method: :delete, "data-confirm" => "本当に削除しますか？" %>
							</td>
								<% end %>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>


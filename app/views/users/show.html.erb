<div class="body">
	<div class="container">
		<% if flash[:notice] %>
		<p style='color :green;'><%= flash[:notice] %></p>
		<% end %>
		<div class="row">
			<div class="col-xs-3">
				<%= render 'users/list', user: @user, book: @book %>
			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<table class="table table-hover table-inverse">
					<thead>
						<tr>
							<th></th>
							<th>Title</th>
							<th>Opinion</th>
							<th colspan="3"></th>
						</tr>
					</thead>
					<tbody>
						<% @books.each do |book| %>
						<tr>
							<td>
								<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg" %>
							</td>
							<td>
								<span>
									<%= link_to book.title, book_path(book) %>
								</span>
							</td>
							<td>
								<span>
									<%= book.body %>
								</span>
							</td>
						</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

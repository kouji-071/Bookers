<div class="container">
	<div class="row">
		<div class="col-xs-3">
			<h2>User info</h2>
			<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-rounded pull-left profile-img", fallback: "no_image.jpg" %>
			<table class="table">
				<tbody>
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= user.introduction %></th>
					</tr>
				</tbody>
			</table>
			<div class="row">
				<%= link_to edit_user_path(user.id) do %>
				<button type="submit" class="col-xs-12 btn btn-default glyphicon glyphicon-wrench"></button>
				<% end %>
			</div>
			<h2>New book</h2>
			<div class="row">
				<%= form_for(@book, url: '/books') do |f| %>
				<h4>Title</h4>
				<%= f.text_field :title, class:"col-xs-12 book_title" %>

				<h4>Opinion</h4>
				<%= f.text_area :body, class:"col-xs-12 book_body" %>
				<br>
				<%= f.submit('Create Book', class:"btn btn-primary col-xs-12") %>
				<% end %>
			</div>
		</div>
	</div>
</div>
